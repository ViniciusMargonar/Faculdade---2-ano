int main()
{
	
	
	
	float raio;
	printf("Digite o raio: ");
	scanf("%f", &raio);
	
	float pi = 3.14;
	float diametro = 2 * raio;
	float area = 2 * (raio * raio);
	float circunferencia = 2 * pi * raio;
